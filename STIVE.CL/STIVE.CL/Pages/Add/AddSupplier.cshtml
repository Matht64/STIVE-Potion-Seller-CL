@page
@model STIVE.CL.Pages.Add.AddSupplierModel

@{
ViewData["Title"] = "Ajouter un fournisseur";
}

<h1>Ajouter un fournisseur</h1>

<div id="supplierFormContainer">
    <form method="post">
        <div class="form-group">
            <label asp-for="Supplier.SupplierName">Nom du fournisseur</label>
            <input asp-for="Supplier.SupplierName" class="form-control" placeholder="Entrez le nom du fournisseur" required />
            <span asp-validation-for="Supplier.SupplierName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Supplier.SupplierPicture">Chemin vers l'image</label>
            <input asp-for="Supplier.SupplierPicture" class="form-control" placeholder="Entrez le chemin vers l'image" required />
            <span asp-validation-for="Supplier.SupplierPicture" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Supplier.PotionId">Potion associ√©e</label>
            <select asp-for="Supplier.PotionId" class="form-control" required >
                <option value="">--Nom de la potion--</option>
                @foreach (var potion in Model.Potions)
                {
                <option value="@potion.PotionId">@potion.PotionName</option>
                }
            </select>
            <span asp-validation-for="Supplier.PotionId" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Ajouter</button>
    </form>
</div>
