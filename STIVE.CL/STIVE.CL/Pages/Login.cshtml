@page
@model STIVE.CL.Pages.LoginModel

@{
    ViewData["Title"] = "Login";
}

<div class="text-center" xmlns="http://www.w3.org/1999/html">
    <form method="post">
        <div>
            <label asp-for="UserLoginDto.Email"></label>
            <input asp-for="UserLoginDto.Email"/>
            <span asp-validation-for="UserLoginDto.Email"></span>
        </div>
        <div>
            <label asp-for="UserLoginDto.Password"></label>
            <input asp-for="UserLoginDto.Password" type="password"/>
            <span asp-validation-for="UserLoginDto.Password"></span>
        </div>
        <button type="submit">Se connecter</button>
    </form>
</div>

@section Scripts
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
