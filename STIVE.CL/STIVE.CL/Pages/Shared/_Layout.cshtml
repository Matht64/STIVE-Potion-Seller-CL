<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/STIVE.CL.styles.css" asp-append-version="true"/>
    <link href="https://fonts.googleapis.com/css2?family=IM+Fell+English+SC&display=swap" rel="stylesheet">
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
        <div class="container">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1 d-flex justify-content-center">
                    <li class="nav-item align-content-end">
                        <a class="nav-link @(ViewContext.RouteData.Values["page"].ToString() == "/Jeu" ? "active" : "")" asp-area="" asp-page="/Jeu">Le jeu</a>
                    </li>
                    <li class="nav-item align-content-end">
                        <a class="nav-link @(ViewContext.RouteData.Values["page"].ToString() == "/Classement" ? "active" : "")" asp-area="" asp-page="/Classement">Classement</a>
                    </li>
                    <li class="nav-item">
                        <a class="@(ViewContext.RouteData.Values["page"].ToString() == "/Index" ? "active" : "")" id="homebutton" asp-area="" asp-page="/Index"><img src="image/Logo.png" alt="Logo" height="200"/></a>
                    </li>
                    <li class="nav-item align-content-end">
                        <a class="nav-link @(ViewContext.RouteData.Values["page"].ToString() == "/Boutique" ? "active" : "")" asp-area="" asp-page="/Boutique">Boutique</a>
                    </li>
                    <li class="nav-item align-content-end">
                        <a class="nav-link @(ViewContext.RouteData.Values["page"].ToString() == "/Register" ? "active" : "")" asp-area="" asp-page="/Register">Register</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted bg-dark">
    <div class="container">
        &copy; 2024 - Stive Potion Seller - <a asp-area="" asp-page="/Privacy">Privacy</a>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const logoItem = document.getElementById('homebutton');
        const originalLogoHTML = logoItem.innerHTML;
        const togglerText = 'Home';
        function updateLogo() {
            if (window.innerWidth < 576) {
                logoItem.innerHTML = togglerText;
                logoItem.classList.add("nav-link");
            } else {
                logoItem.innerHTML = originalLogoHTML;
                logoItem.classList.remove("nav-link");

            }
        }
        updateLogo();
        window.addEventListener('resize', updateLogo);
    });
</script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>