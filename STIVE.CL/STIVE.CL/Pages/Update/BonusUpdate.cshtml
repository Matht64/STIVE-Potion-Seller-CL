@page
@model STIVE.CL.Pages.BonusUpdateModel

@{
ViewData["Title"] = "Modifier la bonus";
}

<h1>Modifier le bonus</h1>

<div id="roleFormContainer">
    <form method="post">
        <input type="hidden" asp-for="Bonus.BonusId" />

        <div class="form-group">
            <label asp-for="Bonus.BonusName"></label>
            <input asp-for="Bonus.BonusName" class="form-control" />
